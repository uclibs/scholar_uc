    <style type="text/css">
    #reader {
        height: 90vh;
        width: 80vw;
        margin-left: auto;
        margin-right: auto;
        background: #ddd;
    }
/*    iframe {
        margin: 0 !important;
    }*/
    .cozy-book-cover {
        height: 90vh;
        border: 1px solid red;
    }
    .cozy-edge {
        position: absolute;
        top: 0;
        bottom: 0;
    }
    .cozy-edge.cozy-left {
        left: 0;
    }
    .cozy-edge.cozy-right {
        right: 0;
    }
    .cozy-control a {
        z-index: 10000;
        background: black;
        color: yellow;
        padding: 8px;
    }
    </style>

    <div id="reader"></div>

    <script type="text/javascript">
        var reader = cozy.reader('reader', { href: "<%= hyrax.download_path( @presenter ).gsub!(/\?.*/, '') + ".epub" %>" });
        reader.start();
        cozy.control.title({ region: 'top.header.left' }).addTo(reader);
        cozy.control.contents({ region: 'top.toolbar.left' }).addTo(reader);
        cozy.control.preferences({ region: 'top.toolbar.right' }).addTo(reader);
        cozy.control.pagePrevious({ region: 'left.sidebar' }).addTo(reader);
        cozy.control.pageNext({ region: 'right.sidebar' }).addTo(reader);
        cozy.control.publicationMetadata({ region: 'bottom.footer' }).addTo(reader);
    </script>

