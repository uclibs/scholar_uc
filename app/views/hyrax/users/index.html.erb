<div id="search">
  <%= render partial: 'search_form' %>
  <h1><%= application_name %> People</h1>
</div>
<p>Users that have contributed content to <%= application_name %> are listed below.</p>
<table class="table table-striped people">
    <thead>
        <tr>
            <th scope="col">Avatar</th>
            <th class="sorts" scope="col"><i id="name" class="<%=params[:sort].blank? ? 'caret up' : params[:sort]== "name desc" ? 'caret' : params[:sort]== "name" ? 'caret up' : ''%>"></i> User Name</th>
            <th class="sorts" scope="col"><i id="login" class="<%=params[:sort]== "login desc" ? 'caret' : params[:sort]== "login" ? 'caret up' : ''%>"></i> User Id</th>
            <th class="sorts" scope="col"><i id="department" class="<%=params[:sort]== "department desc" ? 'caret' : params[:sort]== "department" ? 'caret up' : ''%>"></i> College & Department</th>
            <th scope="col">Works Created</th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% if (current_user && current_user.admin?) || (number_of_works(user) > 0 && !user.admin?) %>
          <tr>
            <td>
              <% if user.avatar.file %>
                <%= link_to hyrax.dashboard_profile_path(user) do %>
                  <%= image_tag(user.avatar.url(:thumb), width: 30) %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to user.name, hyrax.dashboard_profile_path(user) %></td>
            <td><%= link_to user.user_key, hyrax.dashboard_profile_path(user) %></td>
            <td><%= user.full_department %></td>
            <td><%= number_of_works(user) %></td>
	  </tr>
	<% end %>
      <% end %>
    </tbody>
</table>
<div class="pager">
  <%= paginate @users, theme: 'blacklight', route_set: hyrax %>
</div>
